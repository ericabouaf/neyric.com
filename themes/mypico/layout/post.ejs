<article itemscope itemtype="http://schema.org/BlogPosting">
    <time itemprop="datePublished" datetime="<%= page.date.toDate().toISOString() %>"><%= date(page.date) %></time>

    <h1 itemprop="name"><%= page.title %></h1>

    <div itemprop="articleBody"><%- page.content %></div>
</article>

<% if(config.disqus_shortname && page.comments) { %>
<section id="comment">
    <h1>Comments</h1>
    <div id="disqus_thread" aria-live="polite"><%- partial('_partial/post/disqus_thread')%></div>
</section>
<% } %>
