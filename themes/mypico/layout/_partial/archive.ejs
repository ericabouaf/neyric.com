
<%
var title = '';
if (page.category) title = page.category;
if (page.tag) title = page.tag;
if (page.archive) title = __('archive_a');
%>

<div itemscope itemtype="http://schema.org/Blog">
  <% var year = '';
     page.posts.each(function(item){ %>
    <% var post_year = moment(item.date).year() %>
    <% if (!(post_year == year)) {
       year = post_year;
       show = true; %>
    <section><h1><%= year %></h1>
    <% } %>
    <% var post_year = moment(item.date).year();
       var show = false; %>
      <article itemprop="blogPost" itemscope itemtype="http://schema.org/BlogPosting">
        <div>
          <%- partial('post/date', {item: item, type: "archive"}) %>
          <br>
          <%- partial('post/tag', {item: item, type: "archive"}) %>
          <% if(config.disqus_short_name && item.comments) { %>
            <span>
              <a href="<%- config.root %><%- item.path %>#disqus_thread">Comments</a>
            </span>
          <% } %>
        </div>
        <h1 itemprop="name">
          <a href="<%- config.root %><%- item.path %>"><%= item.title %></a>
        </h1>

        <% if (item.thumbnail){ %>
          <div>
              <a href="<%- url_for(item.path) %>">
                <img src="<%- url_for(item.thumbnail) %>" alt="<%= item.title %>" itemprop="image">
              </a>
          </div>
        <% } %>

        <% if (item.excerpt){ %>
            <p><%= item.excerpt %></p>

            <p>Lire l'article complet</p>
        <% } %>


    </article>
    <% if (show) { %>
    </section>
    <% show = false; %>
    <% } %>
  <% }); %>
</div>
