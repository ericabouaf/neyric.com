<% if(index) { %>
	<div>
          <%- partial('post/date', {type: "index"}) %>
          <%- partial('post/tag', {type: "index"}) %>
          <% if(item.comment & config.disqus_shortname) { %>
          <span>
            <a href="<%- item.permalink %>#disqus_thread">Comments</a>
          </span>
          <% } %>
	</div>
        <h1 itemprop="name">
          <a href="<%- config.root %><%- item.path %>" itemprop="url">
            <%= item.title %></a>
        </h1>
        <div itemprop="articleBody">
          <% if (item.excerpt){ %>
            <%- item.excerpt %>
            <a href="<%- config.root %><%- item.path %>">
              <%= theme.excerpt_link %>
            </a>
          <% } else { %>
            <%- item.content %>
          <% } %>
        </div>
<% } else { %>
	<div>
          <%- partial('post/date', {type: "post"}) %>
	</div>
    <h1 itemprop="name"><%= item.title %></h1>
    <div itemprop="articleBody"><%- item.content %></div>
<% } %>
