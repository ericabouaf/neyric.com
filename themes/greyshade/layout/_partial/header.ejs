<div class="profilepic">
  <img src="http://www.gravatar.com/avatar/c7d946263af555b019f71f336da1caf9?s=160" alt='Profile Picture' style='width: 160px;' />
</div><!-- profilepic -->
<h1><a href="<%- config.root %>"><%= config.author %></a></h1>
<nav id="main-nav">
  <ul class="main">
    <% for (var i in theme.menu.page) { %>
      <li>
      <a href="<%- config.root %><%- theme.menu.page[i] %>"><%= i %></a>
      </li>
    <% } %>
  </ul>
  <% if(config.description) { %>
  <section class="aboutme">
    <p>
      <%= config.description %>
    </p>
  </section>
  <% } %>
</nav><!-- main-nav -->
<nav id="sub-nav">
  <div class="social">
    <% if(theme.social.twitter) { %>
      <a class="twitter" href="http://twitter.com/<%- theme.twitter.username %>"
         title="Twitter">Twitter</a>
    <% } %>
    <% if(theme.social.linkedin) { %>
      <a class="linkedin" href="https://www.linkedin.com/in/<%- theme.linkedin.username %>"
         title="LinkedIn">LinkedIn</a>
    <% } %>
    <% if(theme.social.github) { %>
      <a class="github" href="http://github.com/<%- theme.github.username %>"
         title="Github">Github</a>
    <% } %>
    <% if(theme.social.rss) { %>
        <a class="rss" href="<%- config.root%>atom.xml" title="RSS">RSS</a>
    <% } %>
  </div>
</nav><!-- sub-nav -->
